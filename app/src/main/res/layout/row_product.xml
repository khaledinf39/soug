<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<ImageView
    android:layout_width="128dp"
    android:layout_height="128dp"
    android:id="@+id/prod_img"
    android:src="@drawable/item"
    android:scaleType="fitXY"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/whate"
        android:background="@color/orenge"
        android:text="@string/offers"
        android:padding="5dp"
android:fontFamily="@font/saudi"
        android:id="@+id/sale_tv"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/sale_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/whate"
        android:background="@color/grey"
        android:text="@string/offers"
        android:padding="5dp"
        android:fontFamily="@font/saudi"
        android:id="@+id/offer_tv"/>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/prod_img"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/grey2"
        android:textSize="18sp"
        android:text="@string/offers"
        android:padding="5dp"
        android:fontFamily="@font/saudi"
        android:id="@+id/prod_name"/>
    <TextView
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/prod_img"
        app:layout_constraintBottom_toTopOf="@id/sale_tv"
        android:textColor="@color/grey1"
        android:textSize="12sp"
        android:text="201 $"
        android:padding="5dp"
        android:fontFamily="@font/saudi"
        android:id="@+id/price1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/price1"
        app:layout_constraintBottom_toTopOf="@id/sale_tv"
        android:textColor="@color/grey2"
        android:textSize="14sp"
        android:text="150 $"
        android:padding="5dp"
        android:fontFamily="@font/saudi"
        android:id="@+id/price2"/>
</androidx.constraintlayout.widget.ConstraintLayout>