<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Activities.Edite_inBag"
    android:background="@color/background_colo">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="#f2f2f2"
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <ImageView

            android:src="@drawable/ic_edit_ok"
            android:id="@+id/valid_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <ImageView

            android:src="@drawable/ic_back"
            android:id="@+id/back_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/grey"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <View

            android:layout_width="100dp"
            android:layout_height="1dp"
            android:background="@color/grey"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="SOUG"
            android:textColor="@color/grey"
            android:fontFamily="@font/saudi"
            android:textSize="24dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="11dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:visibility="gone"
            android:layout_width="120dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/logo"
            android:scaleType="fitXY"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/whate"
        app:layout_constraintTop_toBottomOf="@+id/header"
        android:text="@string/edite_prod"
        android:textSize="18dp"
        android:textColor="@color/grey2"
        android:fontFamily="@font/saudi"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
       android:gravity="center"
        android:id="@+id/t1"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/whate"
        android:id="@+id/prod"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/prod_img"
            android:src="@drawable/item"
            android:scaleType="fitXY"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="15dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/whate"
            android:src="@drawable/ic_delete"
            android:id="@+id/edit"/>

        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/prod_img"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/grey2"
            android:textSize="18sp"
            android:text="@string/offers"
            android:padding="5dp"
            android:fontFamily="@font/saudi"
            android:id="@+id/prod_name"/>
        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/prod_img"
            app:layout_constraintTop_toBottomOf="@+id/prod_name"
            android:textColor="@color/grey1"
            android:textSize="12sp"
            android:text="201 $"
            android:padding="5dp"
            android:fontFamily="@font/saudi"
            android:id="@+id/price1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintRight_toLeftOf="@+id/price1"
            app:layout_constraintTop_toBottomOf="@+id/prod_name"
            android:textColor="@color/grey2"
            android:textSize="14sp"
            android:text="150 $"
            android:padding="5dp"
            android:fontFamily="@font/saudi"
            android:id="@+id/price2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/prod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="right"
        android:padding="10dp"
        android:background="@color/whate"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/size"
            android:textSize="18dp"
            android:textColor="@color/grey2"
            android:fontFamily="@font/saudi"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/size_RV"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/color"
            android:textSize="18dp"
            android:textColor="@color/grey2"
            android:fontFamily="@font/saudi"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/color_RV"/>

    </LinearLayout>
    <View
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:layout_constraintBottom_toTopOf="@+id/prod"/>
    <View
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_view_line_center_orng"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toBottomOf="@+id/t1"
        app:layout_constraintBottom_toTopOf="@+id/prod"/>
</androidx.constraintlayout.widget.ConstraintLayout>